{
  "name": "books-app",
  "version": "1.0.0",
  "description": "MERN project",
  "main": "index.js",
  "author": "DSchwartz",
  "license": "ISC",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "cd client/src && npm install && npm run build",
    "setup": "npm install && cd client && npm install",
    "start": "node server/index.js",
    "server": "set PORT=4000 && nodemon server/index.js",
    "client": "cd client && npm run start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DvoraSchwartz/Books.git"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.12.3",
    "nodemon": "^2.0.7"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.4"
  }
}
